<odoo>
    <!-- tree view -->
    <record id="credit_payment_terms_tree" model="ir.ui.view">
        <field name="name">Credit Payment Orders Terms Tree</field>
        <field name="model">payment.terms</field>
        <field name="type">tree</field>        
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree >
                <field name="name" />                    
                <!--<field name="payment_id" />-->
                <field name="payment_means_id" />
                <field name="amount"  widget='monetary'/>
                <field name="date_due" />
                <field name="is_fixed" /> 
                <field name="pos_order_id" />
                <field name="invoice_id" />                
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="credit_payment_terms_form" model="ir.ui.view">
        <field name="name">Credit Payment Orders Terms Form</field>
        <field name="model">payment.terms</field>
        
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Credit Payment Orders Terms">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                            <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                            <!--field name="detail_ids" invisible="1"/-->
                        <!--/button-->
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="TÃ©rminos de pagos"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_fixed" /> 
                            <field name="payment_id"/>
                            <field name="payment_means_id"/>
                            <field name="amount"  widget='monetary'/>                                                       
                        </group>
                    </group>
                    <notebook>
                            <page string="Invoice">
                                <field name="invoice_id" readonly="1"/>
                            </page>
                    </notebook>
                    <notebook>
                            <page string="Pos Order">
                                <field name="pos_order_id" readonly="1"/>
                            </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- action window -->
    <record id="action_Payment_terms" model="ir.actions.act_window">
        <field name="name">Credit Payment Terms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.terms</field>
        <field name="view_mode">kanban,tree,form</field>
        <!--
        <field name="domain">[("is_autor","=",True)]</field>
        <field name="context">{"search_default_is_autor":True}</field>
        -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to add a new Credit Payment Term
            </p><p>
            Click the Create button to add a new Credit Payment Term
            </p>
        </field>
    </record>  
</odoo>