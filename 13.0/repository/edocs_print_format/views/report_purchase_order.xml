<?xml version="1.0"?>
<odoo>
    <data>
        <template id="report_purchase_document_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@id='informations']" position="after">
                 <table class="table table-sm table-cst" style="margin-bottom:-7px">
                <tr>
                    <td colspan="4">
                        <div>
                            <div class="row-invoice-details-leyend">Datos del Proveedor</div>
                            <div class="row-invoice-details-inner"><span t-field="o.partner_id.name"/></div>
                        </div>
                    </td>   
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10">RUC</div>
                            <div class="row-invoice-details-inner paln-10"><span t-field="o.partner_id.vat"/></div>
                        </div>
                    </td>   
                </tr>
                <tr>
                    <td colspan="5">
                <div class="row-invoice-details">
                    <div class="row-invoice-details-leyend">Dirección</div>
                    <div class="row-invoice-details-inner">
                        <span t-field="o.partner_id.street"/>
                        <span> - </span>
                        <span class="header-company-basic-info" t-esc="o.partner_id.province_id.name.encode('utf-8', 'ignore').capitalize()"/>
                        <span> - </span>
                        <span class="header-company-basic-info" t-esc="o.partner_id.district_id.name.encode('utf-8', 'ignore').capitalize()"/>
                        <span> - C.P. </span>
                        <span class="header-company-basic-info" t-esc="o.partner_id.zip"/>
                    </div>
                </div>
                    </td>     
                </tr>
                <tr>
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10">Referencia</div>
                            <div class="row-invoice-details-inner paln-10"></div>
                        </div>
                    </td>     
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10" style="width: 125px;">Fecha del Pedido</div>
                            <div class="row-invoice-details-inner paln-10"><span t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}" t-if="o.date_order and o.state not in ['draft','sent']"/></div>
                        </div>
                    </td> 
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10" style="width: 155px;">Fecha de la Cotización</div>
                            <div class="row-invoice-details-inner paln-10"><span t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}" t-if="o.date_order and o.state in ['draft','sent']"/></div>
                        </div>
                    </td> 
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10">Expiración</div>
                            <div class="row-invoice-details-inner paln-10"><span t-if="o.date_order and o.state in ['draft', 'sent']" t-field="o.date_order"/></div>
                        </div>
                    </td> 
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend pal-10">Contacto</div>
                            <div class="row-invoice-details-inner paln-10"><span t-if="o.user_id.name" t-field="o.user_id.name"/></div>
                        </div>
                    </td> 
                </tr>                                                
                   </table>
            </xpath>
        </template>
    </data>
</odoo>